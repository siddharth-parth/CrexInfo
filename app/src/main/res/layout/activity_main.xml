<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2_crex"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_crex"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- TODO: add text styles here -->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_crex"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/dark_background_color"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/tab_indicator_color"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/primary_text_color"
            app:tabTextColor="@color/secondary_text_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>